<!DOCTYPE html>
<html>
  <head>
    <title>Red Familia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render '/layouts/nav' %>

  <% if params[:id] != nil %>
  <% @url = '/user/' + params[:id] %>
  <% if current_page?(@url) %>
  <img src="/Banner.jpg" class="profile-banner"></img>
  <div class="row">
      <div class="col-sm-12" style="background-color: white;">
        <div class="container">
          <div class="col-sm-3">&nbsp;</div>
          <div class="col-sm-6" style="margin-top: 15px">
            <div class="col-sm-2" style="font-size: 100%; opacity: 0.7;">POSTS<br>
                    <h6 style="color: #0084B4; font-size: 150%;"><%= User.find_by_username(params[:id]).posts.count %></h6></div>
                    <% if user_signed_in? %>
                    
            <div class="col-sm-2" style="font-size: 100%; opacity: 0.7;">FOLLOWERS<br>            
                    <h6 style="color: #0084B4; font-size: 150%;"><%= current_user.followers.count %></h6></div>
                            
            
            <% end %>
            
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
  <div class="container">
  <span class="notice"><%= notice %></span>
  <span class="alert"><%= alert %></span>
    <%= yield %>
    </div>
  </body>
</html>
